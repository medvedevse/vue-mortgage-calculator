{
	"extends": "@tsconfig/node20/tsconfig.json",
	"compilerOptions": {
		"target": "ES2022",
		"module": "ES2022",
		"moduleResolution": "Node",
		"outDir": "./dist",
		"rootDir": ".",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"baseUrl": ".",
		"paths": { "@/": ["./server/"] },
		"types": ["node"],
		"noEmit": false
	},
	"include": ["server/server.ts"],
	"exclude": ["node_modules", "**/*.d.ts"]
}
